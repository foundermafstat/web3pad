# Environment Configuration for Shooter Game Contract
# Copy this file to .env and fill in your values

# Wallet Configuration
# Private key for signing transactions (32 bytes hex string)
WALLET_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Public key for verification (33 bytes compressed public key)
WALLET_PUBLIC_KEY=0x02abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890

# Wallet address (Stacks principal address)
WALLET_ADDRESS=SP2PABAF9FTAJYNFZH93XENAJ8FVY99RRM50D2JG9

# Contract Configuration
# Contract address (where the contract is deployed)
CONTRACT_ADDRESS=SP2PABAF9FTAJYNFZH93XENAJ8FVY99RRM50D2JG9

# Contract name
CONTRACT_NAME=shooter-game

# Server Configuration
# Server private key for signing game results (32 bytes hex string)
SERVER_PRIVATE_KEY=0xabcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890

# Server public key for verification (33 bytes compressed public key)
SERVER_PUBLIC_KEY=0x03abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890

# Game Configuration
# Default game ID
DEFAULT_GAME_ID=1

# Default reward amount (in microSTX)
DEFAULT_REWARD_AMOUNT=1000000

# Dispute window in blocks
DISPUTE_WINDOW_BLOCKS=120

# Network Configuration
# Stacks network (testnet or mainnet)
STACKS_NETWORK=testnet

# RPC endpoint
STACKS_RPC_URL=https://stacks-node-api.testnet.stacks.co

